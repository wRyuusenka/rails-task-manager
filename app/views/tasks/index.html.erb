<div class="container">
  <h1>My Tasks</h1>
    <% @tasks.each do |task| %>
      <ol class="list-unstyled mt-3">
        <li>
        <i class="far fa-square mx-3"></i>
        <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task), method: :delete, 
        data: { confirm: "Remove #{task.title}?"} do %>
        <i class="far fa-trash-alt px-1"></i>
        <% end %>
        </li>  <%# the prefix builds the href, needs to have an ID so we give it an instance of the task %>
      </ol>
    <% end %>
</div>

<div class="container border-bottom border-secondary">
</div>

<div class="container mt-3">
<%= link_to "Add a task", new_task_path %>
</div>

